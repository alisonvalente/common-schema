namespace Gpupo\CommonSchema\Console\Command;

require 'vendor/autoload.php';

use Symfony\Component\Console\Input\ArgvInput;
use Symfony\Component\Console\Output\ConsoleOutput;
use Gpupo\CommonSchema\ArrayCollection\Trading\Trading;
use Gpupo\CommonSchema\ArrayCollection\Trading\Order\Order;
use Gpupo\CommonSdk\Console\DoctrineOrmEntityGenerator;
use Gpupo\CommonSdk\Entity\Schema\Tools;

$output = new ConsoleOutput();
$commonSchema = new DoctrineOrmEntityGenerator(new ArgvInput(), $output);

$order = new Order();
$trading = new Trading();


foreach ([
    'trading' => $trading,
    //'order' => $order,
] as $key => $value) {
    $data = Tools::getRecursiveSchema($value);
    $commonSchema->saveDataToSchema($key, $value, $data);
}

try {
    foreach($trading as $object) {
        $commonSchema->recursiveSaveDataDoctrineMetadata($object);
    }
} catch (\Exception $exception) {
    $output->writeln(sprintf('<error>%s</>', $exception->getMessage()));
}
